@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <h2 class="text-dark">📊 Tổng quan hệ thống</h2>
    <p class="text-muted">Chào mừng quản trị viên quay trở lại.</p>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-currency-dollar"></i> Tổng Doanh Thu</h5>
                <h3 class="fw-bold">@ViewBag.TotalRevenue.ToString("#,##0") đ</h3>
                <p class="card-text small">Đơn hàng đã hoàn tất</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-cart-check"></i> Tổng Đơn Hàng</h5>
                <h3 class="fw-bold">@ViewBag.TotalOrders</h3>
                <p class="card-text small">@ViewBag.PendingOrders đơn đang chờ xử lý</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning h-100">
            <div class="card-body">
                <h5 class="card-title text-dark"><i class="bi bi-people"></i> Người dùng</h5>
                <h3 class="fw-bold text-dark">@ViewBag.TotalUsers</h3>
                <p class="card-text small text-dark">Bao gồm Seller & Customer</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-box-seam"></i> Tổng Sản Phẩm</h5>
                <h3 class="fw-bold">@ViewBag.TotalProducts</h3>
                <p class="card-text small">Đang được bày bán</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white fw-bold">
                <i class="bi bi-credit-card"></i> Hệ thống thanh toán
            </div>
            <div class="card-body">
                <p>Phương thức hiện tại: <strong>COD (Thanh toán khi nhận hàng)</strong></p>
                <div class="alert alert-warning small">
                    <i class="bi bi-exclamation-triangle"></i> Tích hợp VNPay/Momo đang trong giai đoạn phát triển.
                </div>
                <button class="btn btn-outline-secondary btn-sm" disabled>Cấu hình cổng thanh toán</button>
            </div>
        </div>
    </div>
</div>