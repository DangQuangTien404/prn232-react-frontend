@model IEnumerable<DAL.Entities.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2>📦 Kho hàng của tôi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Thêm mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-bordered table-hover mb-0 bg-white">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">Ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th class="text-center">Kho</th>
                        <th class="text-center" style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center" style="width: 100px;">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="~/images/@item.ImageUrl" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;" alt="@item.Name" />
                                }
                                else
                                {
                                    <span class="text-muted small">Không có ảnh</span>
                                }
                            </td>
                            <td class="fw-bold">@item.Name</td>
                            <td class="text-success fw-bold">@item.Price.ToString("#,##0") đ</td>
                            <td class="text-center">
                                @if (item.StockQuantity > 0)
                                {
                                    <span class="badge bg-success">@item.StockQuantity</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm \'@item.Name\' không?');" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>