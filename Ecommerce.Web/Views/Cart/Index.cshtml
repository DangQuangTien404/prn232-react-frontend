@model List<Ecommerce.Web.ViewModels.CartItemVM>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}

<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-cart3"></i> Giỏ hàng (@Model.Count sản phẩm)</h2>

    @if (Model.Count > 0)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th scope="col" class="ps-4">Sản phẩm</th>
                                    <th scope="col" class="text-center">Đơn giá</th>
                                    <th scope="col" class="text-center">Số lượng</th>
                                    <th scope="col" class="text-end pe-4">Thành tiền</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <img src="~/images/@item.ImageUrl" class="rounded me-3 border" style="width: 60px; height: 60px; object-fit: cover;">
                                                <div>
                                                    <h6 class="mb-0">@item.ProductName</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center">@item.Price.ToString("#,##0") đ</td>
                                        <td class="align-middle text-center" style="width: 120px;">
                                            <form asp-action="UpdateQuantity" method="post" class="d-flex justify-content-center">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm text-center" style="width: 60px;" onchange="this.form.submit()" />
                                            </form>
                                        </td>
                                        <td class="align-middle text-end pe-4 fw-bold">@item.Total.ToString("#,##0") đ</td>
                                        <td class="align-middle text-end">
                                            <a asp-action="Remove" asp-route-id="@item.ProductId" class="text-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Tiếp tục mua sắm
                    </a>
                    <a asp-action="Clear" class="btn btn-outline-danger" onclick="return confirm('Bạn muốn xóa hết giỏ hàng?');">
                        Xóa sạch giỏ hàng
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">Cộng giỏ hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <span class="fw-bold">@Model.Sum(p => p.Total).ToString("#,##0") đ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span>Giảm giá:</span>
                            <span class="text-success">0 đ</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-5 fw-bold">Tổng cộng:</span>
                            <span class="fs-5 fw-bold text-primary">@Model.Sum(p => p.Total).ToString("#,##0") đ</span>
                        </div>

                        <div class="d-grid">
                            <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary btn-lg">
                                Tiến hành thanh toán
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <img src="https://cdn-icons-png.flaticon.com/512/11329/11329060.png" style="width: 150px;" class="mb-3 opacity-50">
            <h4>Giỏ hàng trống!</h4>
            <p class="text-muted">Bạn chưa chọn sản phẩm nào.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Mua sắm ngay</a>
        </div>
    }
</div>