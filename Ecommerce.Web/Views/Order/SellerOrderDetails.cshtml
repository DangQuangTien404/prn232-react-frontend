@model DAL.Entities.Order
@using DAL.Entities

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-receipt"></i> Chi tiết đơn hàng #@Model.Id</h2>
        <a asp-action="SellerOrders" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <p><strong>Khách hàng:</strong> @(Model.Customer != null ? Model.Customer.FullName : Model.CustomerId.ToString())</p>
                    <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Thanh toán:</strong> <span class="badge bg-secondary">@Model.PaymentMethod</span></p>
                    <p><strong>Tổng tiền:</strong> <span class="text-danger fw-bold fs-5">@Model.TotalAmount.ToString("#,##0") đ</span></p>
                    <p>
                        <strong>Trạng thái:</strong>
                        @switch (Model.Status)
                        {
                            case OrderStatus.Pending:
                                <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                break;
                            case OrderStatus.Confirmed:
                                <span class="badge bg-primary">Đã xác nhận</span>
                                break;
                            case OrderStatus.Shipping:
                                <span class="badge bg-info text-dark">Đang giao</span>
                                break;
                            case OrderStatus.Completed:
                                <span class="badge bg-success">Đã giao</span>
                                break;
                            case OrderStatus.Cancelled:
                                <span class="badge bg-danger">Đã hủy</span>
                                break;
                        }
                    </p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title mb-0">Xử lý đơn hàng</h5>
                </div>
                <div class="card-body d-grid gap-2">
                    @if (Model.Status == OrderStatus.Pending)
                    {
                        <form asp-action="UpdateOrderStatus" method="post">
                            <input type="hidden" name="orderId" value="@Model.Id" />
                            <input type="hidden" name="newStatus" value="@OrderStatus.Confirmed" />
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-check-circle"></i> Xác nhận đơn hàng
                            </button>
                        </form>
                        <form asp-action="UpdateOrderStatus" method="post" class="mt-2">
                            <input type="hidden" name="orderId" value="@Model.Id" />
                            <input type="hidden" name="newStatus" value="@OrderStatus.Cancelled" />
                            <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Bạn có chắc muốn hủy đơn này?');">
                                <i class="bi bi-x-circle"></i> Hủy đơn hàng
                            </button>
                        </form>
                    }
                    else if (Model.Status == OrderStatus.Confirmed)
                    {
                        <form asp-action="UpdateOrderStatus" method="post">
                            <input type="hidden" name="orderId" value="@Model.Id" />
                            <input type="hidden" name="newStatus" value="@OrderStatus.Shipping" />
                            <button type="submit" class="btn btn-info w-100 text-white">
                                <i class="bi bi-truck"></i> Giao cho vận chuyển
                            </button>
                        </form>
                    }
                    else if (Model.Status == OrderStatus.Shipping)
                    {
                        <form asp-action="UpdateOrderStatus" method="post">
                            <input type="hidden" name="orderId" value="@Model.Id" />
                            <input type="hidden" name="newStatus" value="@OrderStatus.Completed" />
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-all"></i> Xác nhận đã giao (Hoàn tất)
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <em>Không có hành động nào khả dụng.</em>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Danh sách sản phẩm</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                            {
                                foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            @* Kiểm tra null cho Product để tránh lỗi *@
                                            <span class="fw-bold">@(item.Product?.Name ?? "Sản phẩm #" + item.ProductId)</span>
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("#,##0") đ</td>
                                        <td class="text-end fw-bold">@((item.Quantity * item.UnitPrice).ToString("#,##0")) đ</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Không tìm thấy chi tiết sản phẩm.</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                                <td class="text-end fw-bold text-danger">@Model.TotalAmount.ToString("#,##0") đ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>