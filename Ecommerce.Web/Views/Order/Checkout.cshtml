@model List<Ecommerce.Web.ViewModels.CartItemVM>

@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-credit-card"></i> Xác nhận đơn hàng & Thanh toán</h2>

    <div class="row">
        <div class="col-md-7">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light fw-bold">Sản phẩm trong giỏ</div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <img src="~/images/@item.ImageUrl" class="img-thumbnail me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                <div>
                                    <h6 class="my-0">@item.ProductName</h6>
                                    <small class="text-muted">SL: @item.Quantity x @item.Price.ToString("#,##0") đ</small>
                                </div>
                            </div>
                            <span class="text-muted">@item.Total.ToString("#,##0") đ</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <span class="fw-bold">Tổng cộng (VNĐ)</span>
                        <strong class="text-danger fs-5">@Model.Sum(x => x.Total).ToString("#,##0") đ</strong>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-lg border-primary">
                <div class="card-header bg-primary text-white text-center fw-bold">
                    THÔNG TIN THANH TOÁN
                </div>
                <div class="card-body">
                    <form asp-action="Checkout" method="post" id="checkoutForm">

                        <h6 class="mb-3">Chọn phương thức thanh toán:</h6>

                        <div class="form-check mb-3 p-3 border rounded bg-light">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="paymentCOD" value="COD" checked onchange="togglePaymentForm()">
                            <label class="form-check-label fw-bold" for="paymentCOD">
                                <i class="bi bi-cash-coin text-success"></i> Thanh toán khi nhận hàng (COD)
                            </label>
                            <div class="text-muted small ms-2 mt-1">Bạn sẽ thanh toán tiền mặt cho shipper khi nhận được hàng.</div>
                        </div>

                        <div class="form-check mb-3 p-3 border rounded bg-light">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="paymentCard" value="Card" onchange="togglePaymentForm()">
                            <label class="form-check-label fw-bold" for="paymentCard">
                                <i class="bi bi-credit-card-2-front text-primary"></i> Thẻ Tín dụng / Ghi nợ Quốc tế
                            </label>
                            <div class="text-muted small ms-2 mt-1">Visa, Mastercard, JCB (Mô phỏng)</div>
                        </div>

                        <div id="cardInfoPanel" class="border rounded p-3 mb-3 bg-white" style="display: none;">
                            <div class="mb-3">
                                <label class="form-label small text-muted">Số thẻ</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-credit-card"></i></span>
                                    <input type="text" class="form-control" name="cardNumber" placeholder="0000 0000 0000 0000" maxlength="19">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small text-muted">Tên in trên thẻ</label>
                                <input type="text" class="form-control" name="cardHolder" placeholder="NGUYEN VAN A" style="text-transform: uppercase;">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label small text-muted">Ngày hết hạn</label>
                                    <input type="text" class="form-control" name="cardExpiry" placeholder="MM/YY" maxlength="5">
                                </div>
                                <div class="col-6">
                                    <label class="form-label small text-muted">Mã CVV</label>
                                    <input type="password" class="form-control" name="cardCVV" placeholder="123" maxlength="3">
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <button class="w-100 btn btn-primary btn-lg" type="submit">
                            <i class="bi bi-lock-fill"></i> Xác nhận đặt hàng
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePaymentForm() {
        var isCard = document.getElementById("paymentCard").checked;
        var cardPanel = document.getElementById("cardInfoPanel");
        var inputs = cardPanel.querySelectorAll("input");

        if (isCard) {
            cardPanel.style.display = "block";
            // Bắt buộc nhập nếu chọn thẻ
            inputs.forEach(input => input.required = true);
        } else {
            cardPanel.style.display = "none";
            // Bỏ bắt buộc nhập nếu chọn COD
            inputs.forEach(input => input.required = false);
        }
    }
</script>