@model IEnumerable<DAL.Entities.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng (Seller)";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-shop"></i> Danh sách đơn hàng cần xử lý</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Chưa có đơn hàng nào trong hệ thống.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0 align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Mã đơn (#)</th>
                                <th>Ngày đặt</th>
                                <th>Khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Thanh toán</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">#@item.Id</td>
                                    <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        User ID: @item.CustomerId
                                    </td>
                                    <td class="fw-bold text-danger">@item.TotalAmount.ToString("#,##0") đ</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.PaymentMethod</span>
                                    </td>
                                    <td>
                                        @if (item.Status == DAL.Entities.OrderStatus.Pending)
                                        {
                                            <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                        }
                                        else if (item.Status == DAL.Entities.OrderStatus.Shipping)
                                        {
                                            <span class="badge bg-primary">Đang giao</span>
                                        }
                                        else if (item.Status == DAL.Entities.OrderStatus.Completed)
                                        {
                                            <span class="badge bg-success">Hoàn tất</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="SellerOrderDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Xử lý
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>