@model IEnumerable<DAL.Entities.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container py-4">
    <h2 class="mb-4">📄 Lịch sử mua hàng</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Bạn chưa có đơn hàng nào.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover border">
                <thead class="table-dark">
                    <tr>
                        <th>Mã đơn (#)</th>
                        <th>Ngày đặt</th>
                        <th>Trạng thái</th>
                        <th>Tổng tiền</th>
                        <th>Thanh toán</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (item.Status == DAL.Entities.OrderStatus.Pending)
                                {
                                    <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                }
                                else if (item.Status == DAL.Entities.OrderStatus.Confirmed)
                                {
                                    <span class="badge bg-info text-dark">Đã xác nhận</span>
                                }
                                else if (item.Status == DAL.Entities.OrderStatus.Shipping)
                                {
                                    <span class="badge bg-primary">Đang giao</span>
                                }
                                else if (item.Status == DAL.Entities.OrderStatus.Completed)
                                {
                                    <span class="badge bg-success">Đã giao</span>
                                }
                                else if (item.Status == DAL.Entities.OrderStatus.Cancelled)
                                {
                                    <span class="badge bg-danger">Đã hủy</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Status</span>
                                }
                            </td>
                            <td class="fw-bold text-danger">@item.TotalAmount.ToString("#,##0") đ</td>
                            <td>@item.PaymentMethod</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>