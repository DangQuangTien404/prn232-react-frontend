@using Ecommerce.Web.Helpers
@using Ecommerce.Web.ViewModels
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EShop Store</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        .search-input {
            border-radius: 20px 0 0 20px;
            border-right: none;
        }

        .search-btn {
            border-radius: 0 20px 20px 0;
        }

        .nav-icon-badge {
            position: absolute;
            top: 0;
            right: 0;
            transform: translate(25%, -25%);
            font-size: 0.65rem;
        }

        .dropdown-item:active {
            background-color: #0d6efd;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <div class="bg-primary text-white py-1 small">
            <div class="container d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-telephone-fill me-2"></i> Hotline: 1900 1234
                    <span class="mx-2">|</span>
                    <i class="bi bi-envelope-fill me-2"></i> support@eshop.com
                </div>
                <div>
                    @if (User.IsInRole("Seller"))
                    {
                        <span class="badge bg-warning text-dark me-2">Kênh Người Bán</span>
                    }
                    <a href="#" class="text-white text-decoration-none me-3">Trợ giúp</a>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3 sticky-top">
            <div class="container">
                <a class="navbar-brand text-primary fs-3 me-4" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bag-check-fill"></i> EShop<span class="text-dark">Store</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <form class="d-flex mx-auto my-2 my-lg-0 w-50">
                        <input class="form-control search-input ps-4" type="search" placeholder="Bạn tìm gì hôm nay?" aria-label="Search">
                        <button class="btn btn-primary search-btn px-4" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <ul class="navbar-nav ms-auto align-items-center">

                        @if (User.IsInRole("Seller") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-dark btn-sm rounded-pill px-3" asp-controller="Product" asp-action="Index">
                                    <i class="bi bi-shop me-1"></i> Quản lý Shop
                                </a>
                            </li>
                        }

                        <li class="nav-item me-3 position-relative">
                            <a class="nav-link text-dark fs-5" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart3"></i>

                                @* --- ĐOẠN CODE SỬA: LẤY SỐ LƯỢNG TỪ SESSION --- *@
                                @{
                                    var cart = Context.Session.Get<List<CartItemVM>>("MY_CART");
                                    var cartCount = cart != null ? cart.Sum(p => p.Quantity) : 0;
                                }
                                <span class="badge bg-danger rounded-pill nav-icon-badge">@cartCount</span>
                                @* --------------------------------------------- *@

                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                                        <i class="bi bi-person-fill fs-5 text-secondary"></i>
                                    </div>
                                    <span class="fw-medium">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="MyOrders"><i class="bi bi-box-seam me-2"></i>Đơn mua</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item text-danger" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Admin Panel</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary rounded-pill px-4 me-2" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary rounded-pill px-4" asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="text-white fw-bold">EShop Store</h5>
                    <p class="small text-secondary">Nền tảng thương mại điện tử uy tín hàng đầu.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase fw-bold mb-3">Liên kết</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-decoration-none text-secondary">Về chúng tôi</a></li>
                        <li><a href="#" class="text-decoration-none text-secondary">Chính sách bảo mật</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase fw-bold mb-3">Liên hệ</h6>
                    <p class="small text-secondary"><i class="bi bi-geo-alt me-2"></i> Hà Nội, Việt Nam</p>
                </div>
            </div>
            <div class="border-top border-secondary pt-3 text-center small text-secondary">
                &copy; 2025 EShop PRN222. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>