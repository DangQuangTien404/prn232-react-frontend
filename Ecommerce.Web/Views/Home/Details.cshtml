@model DAL.Entities.Product
@using DAL.Entities

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 mb-5">
        <div class="row g-0">
            <div class="col-md-5 bg-light d-flex align-items-center justify-content-center p-3">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="~/images/@Model.ImageUrl" class="img-fluid rounded shadow-sm" style="max-height: 400px; object-fit: contain;" alt="@Model.Name">
                }
                else
                {
                    <div class="text-muted p-5 border rounded">
                        <i class="bi bi-image fs-1"></i>
                        <p>Chưa có ảnh</p>
                    </div>
                }
            </div>

            <div class="col-md-7">
                <div class="card-body p-4">
                    <h2 class="card-title fw-bold text-dark">@Model.Name</h2>

                    <h3 class="text-danger my-3 fw-bold">@Model.Price.ToString("#,##0") VNĐ</h3>

                    <div class="d-flex align-items-center mb-3">
                        @if (Model.StockQuantity > 0)
                        {
                            <span class="badge bg-success me-2"><i class="bi bi-check-circle"></i> Còn hàng</span>
                            <span class="text-muted small">(@Model.StockQuantity sản phẩm có sẵn)</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary me-2">Hết hàng</span>
                            <span class="text-danger small">Vui lòng quay lại sau</span>
                        }
                    </div>

                    <div class="p-3 bg-light rounded mb-4">
                        <h6 class="fw-bold">Mô tả sản phẩm:</h6>
                        <p class="card-text text-secondary mb-0" style="white-space: pre-line;">@Model.Description</p>
                    </div>

                    @if (Model.StockQuantity > 0)
                    {
                        var currentUserIdStr = User.FindFirst("UserId")?.Value;
                        int currentUserId = 0;
                        if (!string.IsNullOrEmpty(currentUserIdStr))
                        {
                            int.TryParse(currentUserIdStr, out currentUserId);
                        }

                        <div class="d-flex gap-2">
                            @if (User.Identity.IsAuthenticated && Model.SellerId == currentUserId)
                            {
                                <button type="button" class="btn btn-secondary btn-lg px-4 shadow-sm" disabled>
                                    <i class="bi bi-person-fill"></i> Sản phẩm của bạn
                                </button>
                            }
                            else
                            {
                                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex align-items-center gap-3">
                                    <input type="hidden" name="productId" value="@Model.Id" />

                                    <div class="input-group" style="width: 140px;">
                                        <span class="input-group-text">SL</span>
                                        <input type="number" name="quantity" value="1" min="1" max="@Model.StockQuantity" class="form-control text-center fw-bold" />
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-lg px-4 shadow-sm">
                                        <i class="bi bi-cart-plus-fill"></i> Chọn Mua
                                    </button>
                                </form>
                            }
                        </div>
                    }

                    <hr class="my-4" />

                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Quay lại trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-white py-3">
            <h4 class="fw-bold m-0"><i class="bi bi-star"></i> Đánh giá & Nhận xét</h4>

            <div class="d-flex align-items-center mt-2">
                <span class="display-6 fw-bold text-warning me-2">
                    @(ViewBag.AverageRating != null ? ((double)ViewBag.AverageRating).ToString("0.0") : "0.0")
                </span>
                <div class="d-flex flex-column">
                    <span class="text-warning fs-5">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (ViewBag.AverageRating != null && i <= (double)ViewBag.AverageRating)
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            else if (ViewBag.AverageRating != null && i - 0.5 <= (double)ViewBag.AverageRating)
                            {

                                <i class="bi bi-star-half"></i>
                            }
                            else
                            {

                                <i class="bi bi-star"></i>
                            }
                        }
                    </span>
                    <small class="text-muted">Dựa trên @(ViewBag.ReviewCount ?? 0) đánh giá</small>
                </div>
            </div>
        </div>

        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger"><i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success"><i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]</div>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <div class="bg-light p-4 rounded mb-4 border">
                    <h5 class="fw-bold mb-3">Viết đánh giá của bạn</h5>
                    <form asp-controller="Review" asp-action="AddReview" method="post">
                        <input type="hidden" name="productId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mức độ hài lòng:</label>
                            <div class="rating-select">
                                <select name="rating" class="form-select w-auto fw-bold text-warning border-warning">
                                    <option value="5">⭐⭐⭐⭐⭐ (Tuyệt vời)</option>
                                    <option value="4">⭐⭐⭐⭐ (Hài lòng)</option>
                                    <option value="3">⭐⭐⭐ (Bình thường)</option>
                                    <option value="2">⭐⭐ (Tệ)</option>
                                    <option value="1">⭐ (Rất tệ)</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nội dung đánh giá:</label>
                            <textarea name="comment" class="form-control" rows="3" placeholder="Chia sẻ cảm nhận của bạn về sản phẩm này..." required></textarea>
                        </div>

                        <button type="submit" class="btn btn-warning text-dark fw-bold">
                            <i class="bi bi-send"></i> Gửi đánh giá
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center">
                    Vui lòng <a asp-controller="Account" asp-action="Login" class="fw-bold">đăng nhập</a> để viết đánh giá cho sản phẩm này.
                </div>
            }

            <hr />

            <div class="review-list mt-4">
                @if (ViewBag.Reviews != null)
                {
                    foreach (var review in ViewBag.Reviews)
                    {
                        <div class="d-flex mb-4 border-bottom pb-3">
                            <div class="flex-shrink-0">
                                <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; font-size: 20px;">
                                    @if (review.Customer?.FullName?.Length > 0)
                                    {
                                        @review.Customer.FullName.Substring(0, 1).ToUpper()
                                    }
                                    else
                                    {
                                        <span>?</span>
                                    }
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="fw-bold mb-0">@(review.Customer?.FullName ?? "Người dùng ẩn danh")</h6>
                                        <div class="text-warning small">
                                            @for (int i = 0; i < review.Rating; i++)
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                        </div>
                                    </div>
                                    <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>

                                <p class="mt-2 mb-2 text-dark">@review.Comment</p>

                                @if (!string.IsNullOrEmpty(review.SellerReply))
                                {
                                    <div class="bg-light p-3 rounded border-start border-4 border-primary mt-2 ms-4">
                                        <div class="d-flex align-items-center mb-1">
                                            <i class="bi bi-shop text-primary me-2 fs-5"></i>
                                            <strong class="text-primary">Phản hồi từ Người bán</strong>
                                            <small class="text-muted ms-auto fst-italic">@review.ReplyDate?.ToString("dd/MM/yyyy")</small>
                                        </div>
                                        <p class="mb-0 text-secondary">@review.SellerReply</p>
                                    </div>
                                }

                                @if (User.IsInRole("Seller") && Model.SellerId.ToString() == User.FindFirst("UserId")?.Value && string.IsNullOrEmpty(review.SellerReply))
                                {
                                    <button class="btn btn-sm btn-link text-decoration-none mt-1" type="button" data-bs-toggle="collapse" data-bs-target="#replyBox-@review.Id">
                                        <i class="bi bi-reply"></i> Trả lời
                                    </button>
                                    <div class="collapse mt-2 ms-4" id="replyBox-@review.Id">
                                        <form asp-controller="Review" asp-action="ReplyReview" method="post">
                                            <input type="hidden" name="reviewId" value="@review.Id" />
                                            <div class="input-group input-group-sm">
                                                <input type="text" name="replyContent" class="form-control" placeholder="Nhập câu trả lời của bạn..." required />
                                                <button class="btn btn-primary" type="submit">Gửi</button>
                                            </div>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }

                @if (ViewBag.ReviewCount == 0)
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-chat-square-text fs-1 opacity-25"></i>
                        <p class="mt-2">Chưa có đánh giá nào. Hãy là người đầu tiên nhận xét!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>